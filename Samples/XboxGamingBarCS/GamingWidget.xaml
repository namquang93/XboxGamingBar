<Page
    x:Class="XboxGamingBarCS.GamingWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:XboxGamingBarCS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock Text="Performance Overlay" Margin="0,0,0,8" FontWeight="SemiBold"/>
        <Slider x:Name="slider"
            Minimum="0" Maximum="4"
            TickFrequency="1"
            TickPlacement="BottomRight"
            ValueChanged="Slider_ValueChanged"/>
        <Grid Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Low"    Grid.Column="0" HorizontalAlignment="Center"/>
            <TextBlock Text="MedLo"  Grid.Column="1" HorizontalAlignment="Center"/>
            <TextBlock Text="Medium" Grid.Column="2" HorizontalAlignment="Center"/>
            <TextBlock Text="MedHi"  Grid.Column="3" HorizontalAlignment="Center"/>
            <TextBlock Text="High"   Grid.Column="4" HorizontalAlignment="Center"/>
        </Grid>
        <Button x:Name="myButton" Click="MyButton_Click">Click Me</Button>
    </StackPanel>
</Page>
