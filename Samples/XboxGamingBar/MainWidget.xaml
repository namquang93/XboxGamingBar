<Page
    x:Class="XboxGamingBar.MainWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:XboxGamingBar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Page-wide Slider style -->
        <ControlTemplate x:Key="PerformanceOverlaySliderTemplate" TargetType="Slider">
            <Grid>
                <!-- Horizontal template (thicker track + circular thumb) -->
                <Grid x:Name="HorizontalTemplate" Height="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Rectangle x:Name="HorizontalTrackRect"
                                    Grid.Row="0"
                                    Height="6"
                                    Margin="0,0,0,0"
                                    RadiusX="3" RadiusY="3"
                                    Fill="{ThemeResource SystemControlForegroundBaseLowBrush}"/>

                    <Thumb x:Name="HorizontalThumb"
                                    Grid.Row="0"
                                    Width="10" Height="10">
                        <Thumb.Template>
                            <ControlTemplate TargetType="Thumb">
                                <Ellipse Fill="{ThemeResource SystemControlHighlightAccentBrush}"/>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>

                    <Grid Margin="-39,0,-39,0" VerticalAlignment="Center" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Width="2" Height="8" Fill="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
                        <Rectangle Grid.Column="1" Width="2" Height="8" Fill="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
                        <Rectangle Grid.Column="2" Width="2" Height="8" Fill="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
                        <Rectangle Grid.Column="3" Width="2" Height="8" Fill="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
                        <Rectangle Grid.Column="4" Width="2" Height="8" Fill="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>
                <!-- Vertical template can be added similarly -->
            </Grid>
        </ControlTemplate>
    </Page.Resources>

    <Grid x:Name="RootGrid" Margin="15,15,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Label + Slider, anchored at top -->
        <TextBlock Grid.Row="0"
            Text="Performance Overlay"
            Margin="0,0,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="20"
            FontStyle="Normal"
            FontWeight="Medium"
            FontFamily="Segoe UI"
            AllowFocusOnInteraction="False"/>

        <Slider Grid.Row="1"
            Minimum="0" Maximum="4"
            StepFrequency="1"
            TickFrequency="1"
            Value="1"
            TickPlacement="BottomRight"
            BorderThickness="100"
            HorizontalAlignment="Stretch" VerticalAlignment="Top"
            Template="{StaticResource PerformanceOverlaySliderTemplate}"/>
    </Grid>
</Page>
