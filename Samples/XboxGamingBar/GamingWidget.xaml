<Page
    x:Class="XboxGamingBar.GamingWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:XboxGamingBar"
    xmlns:converter="using:XboxGamingBar.Converter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="670" d:DesignWidth="464">

    <Page.Resources>
        <converter:WattStringConverter x:Key="WattStringConverter"/>
        <converter:MegahertzStringConverter x:Key="MegahertzStringConverter"/>
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converter:SharpnessPercentStringConverter x:Key="SharpnessPercentStringConverter"/>
        <converter:RadeonBoostResolutionStringConverter x:Key="RadeonBoostResolutionStringConverter"/>
        <converter:RadeonChillMinFPSStringConverter x:Key="RadeonChillMinFPSStringConverter"/>
        <converter:RadeonChillMaxFPSStringConverter x:Key="RadeonChillMaxFPSStringConverter"/>
    </Page.Resources>

    <ScrollViewer x:Name="RootScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid x:Name="RootGrid">
            <Grid x:Name="MainGrid" Margin="15,15,15,15">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="Row_0_ProgressRing" Height="Auto"/>
                    <RowDefinition x:Name="Row_1_PerformanceText" Height="50"/>
                    <RowDefinition x:Name="Row_2_Spacer_1" Height="20"/>
                    <RowDefinition x:Name="Row_3_PerformanceOverlayText" Height="30"/>
                    <RowDefinition x:Name="Row_4_PerformanceOverlaySlider" Height="32"/>
                    <RowDefinition x:Name="Row_5_Spacer_2" Height="20"/>
                    <RowDefinition x:Name="Row_6_Spacer_3" Height="20"/>
                    <RowDefinition x:Name="Row_7_PerGameProfile" Height="36"/>
                    <RowDefinition x:Name="Row_8_TDPLimitText" Height="30"/>
                    <RowDefinition x:Name="Row_9_TDPSlider" Height="32"/>
                    <RowDefinition x:Name="Row_10_CPUBoost" Height="36"/>
                    <RowDefinition x:Name="Row_11_CPUEPPText" Height="30"/>
                    <RowDefinition x:Name="Row_12_CPUEPPSlider" Height="32"/>
                    <RowDefinition x:Name="Row_13_LimitCPUClockToggle" Height="36"/>
                    <RowDefinition x:Name="Row_14_CPUClockMaxSlider" Height="Auto"/>
                    <RowDefinition x:Name="Row_15_Spacer_4" Height="20"/>
                    <RowDefinition x:Name="Row_16_SystemText" Height="50"/>
                    <RowDefinition x:Name="Row_17_Spacer_5" Height="20"/>
                    <RowDefinition x:Name="Row_18_RefreshRates" Height="36"/>
                    <RowDefinition x:Name="Row_19_Resolutions" Height="36"/>
                    <RowDefinition x:Name="Row_20_Spacer_6" Height="20"/>
                    <RowDefinition x:Name="Row_21_AMDText" Height="50"/>
                    <RowDefinition x:Name="Row_22_Spacer_7" Height="20"/>
                    <RowDefinition x:Name="Row_23_AMDRadeonSuperResolutionToggle" Height="36"/>
                    <RowDefinition x:Name="Row_24_AMDRadeonSuperResolutionSlider" Height="Auto"/>
                    <RowDefinition x:Name="Row_25_AMDFluidMotionFrameToggle" Height="36"/>
                    <RowDefinition x:Name="Row_26_AMDRadeonAntiLagToggle" Height="36"/>
                    <RowDefinition x:Name="Row_27_AMDRadeonBoostToggle" Height="36"/>
                    <RowDefinition x:Name="Row_28_AMDRadeonBoostResolutionSlider" Height="Auto"/>
                    <RowDefinition x:Name="Row_29_AMDRadeonChillToggle" Height="36"/>
                    <RowDefinition x:Name="Row_30_AMDRadeonChillMinFPSText" Height="Auto"/>
                    <RowDefinition x:Name="Row_31_AMDRadeonChillMinFPSSlider" Height="Auto"/>
                    <RowDefinition x:Name="Row_32_AMDRadeonChillMaxFPSText" Height="Auto"/>
                    <RowDefinition x:Name="Row_33_AMDRadeonChillMaxFPSSlider" Height="Auto"/>
                    <!-- Add more RowDefinitions as needed, each with Height="200" -->
                </Grid.RowDefinitions>

                <ProgressRing x:Name="LoadingProgressRing" IsActive="True" Visibility="Collapsed" Grid.Row="0" Width="100" Height="100"/>

                <TextBlock x:Name="PerformanceText" Text="Performance" Margin="0,0,0,0" FontWeight="Bold" FontSize="26" Grid.Row="1"/>
                <Line X1="0" Y1="0" X2="100000" Y2="0" Stroke="DarkGray" StrokeThickness="1.5" Grid.Row="1" VerticalAlignment="Bottom"/>

                <TextBlock x:Name="PerformanceOverlayText" Text="Performance Overlay" Margin="0,0,0,0" FontWeight="SemiBold" FontSize="18" Grid.Row="3"/>
                <Slider x:Name="PerformanceOverlaySlider" Grid.Row="4" Margin="0,0,0,0"
                Minimum="0" Maximum="4"
                TickFrequency="1"
                SnapsTo="StepValues"
                TickPlacement="BottomRight"
                IsEnabled="False"/>
                <Grid Margin="-48,0,-48,0" Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="OFF"     Grid.Column="0" HorizontalAlignment="Center" FontSize="16"/>
                    <TextBlock Text="FPS"      Grid.Column="1" HorizontalAlignment="Center" FontSize="16"/>
                    <TextBlock Text="BATTERY"  Grid.Column="2" HorizontalAlignment="Center" FontSize="16"/>
                    <TextBlock Text="DETAILED" Grid.Column="3" HorizontalAlignment="Center" FontSize="16"/>
                    <TextBlock Text="FULL"     Grid.Column="4" HorizontalAlignment="Center" FontSize="16"/>
                </Grid>

                <TextBlock x:Name="RunningGameText" Text="No game detected" FontWeight="SemiBold" FontSize="18" Grid.Row="7"
                TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ToggleSwitch x:Name="PerGameProfileToggle" IsEnabled="False" OffContent="Global Profile" OnContent="Per-game Profile"
                FlowDirection="RightToLeft" Grid.Row="7" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                <TextBlock x:Name="TDPLimitText" Text="Thermal Power (TDP) Limit" Margin="0,0,0,0" FontWeight="SemiBold" FontSize="18" Grid.Row="8"/>
                <TextBlock x:Name="TDPValueText" Grid.Row="8" Margin="0,0,0,0" Text="{Binding ElementName=TDPSlider, Path=Value, Converter={StaticResource WattStringConverter}}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <Slider x:Name="TDPSlider" Grid.Row="9" Margin="0,0,0,0"
                Minimum="4" Maximum="32"
                TickFrequency="1"
                SnapsTo="Ticks"
                TickPlacement="BottomRight"
                IsEnabled="False"/>

                <TextBlock x:Name="CPUBoostText" Text="CPU Boost" FontWeight="SemiBold" FontSize="18" Grid.Row="10"
                TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ToggleSwitch x:Name="CPUBoostToggle" IsEnabled="False" OffContent="Disabled" OnContent="Aggressive"
                FlowDirection="RightToLeft" Grid.Row="10" VerticalAlignment="Center" HorizontalAlignment="Right" />

                <TextBlock x:Name="CPUEPPText" Text="CPU Energy Performance Preference (EPP)" Margin="0,0,0,0" FontWeight="SemiBold" FontSize="18" Grid.Row="11"/>
                <TextBlock x:Name="CPUEPPValueText" Grid.Row="11" Margin="0,0,0,0" Text="{Binding ElementName=CPUEPPSlider, Path=Value}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <Slider x:Name="CPUEPPSlider" Grid.Row="12" Margin="0,0,0,0"
                Minimum="10" Maximum="95"
                TickFrequency="5"
                SnapsTo="Ticks"
                TickPlacement="BottomRight"
                IsEnabled="False"/>

                <!-- CPU Clock -->
                <TextBlock x:Name="LimitCPUClockText" Text="Limit CPU Clock" FontWeight="SemiBold" FontSize="18" Grid.Row="13"
                TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ToggleSwitch x:Name="LimitCPUClockToggle" IsEnabled="False" OffContent="Disabled" OnContent="{Binding ElementName=CPUClockMaxSlider, Path=Value, Converter={StaticResource MegahertzStringConverter}}"
                FlowDirection="RightToLeft" Grid.Row="13" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <Slider x:Name="CPUClockMaxSlider" Grid.Row="14" Margin="0,0,0,0"
                Minimum="300" Maximum="5100"
                TickFrequency="100"
                SnapsTo="Ticks"
                TickPlacement="BottomRight"
                IsEnabled="False"
                Visibility="{Binding ElementName=LimitCPUClockToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock x:Name="SystemText" Text="System" Margin="0,0,0,0" FontWeight="Bold" FontSize="26" Grid.Row="16"/>
                <Line X1="0" Y1="0" X2="100000" Y2="0" Stroke="DarkGray" StrokeThickness="1.5" Grid.Row="16" VerticalAlignment="Bottom"/>
                
                <TextBlock x:Name="RefreshRatesText" Text="Refresh Rate" FontWeight="SemiBold" FontSize="18" Grid.Row="18"
                    TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ComboBox x:Name="RefreshRatesComboBox" Grid.Row="18" PlaceholderText="60 Hz" Width="120" IsEnabled="False" HorizontalAlignment="Right">
                    <x:String>60 Hz</x:String>
                </ComboBox>

                <TextBlock x:Name="ResolutionsText" Text="Resolution" FontWeight="SemiBold" FontSize="18" Grid.Row="19"
                    TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ComboBox x:Name="ResolutionsComboBox" Grid.Row="19" PlaceholderText="1920x1080" Width="120" IsEnabled="False" HorizontalAlignment="Right">
                    <x:String>1920x1080</x:String>
                </ComboBox>

                <TextBlock x:Name="AMDText" Text="AMD Settings" Margin="0,0,0,0" FontWeight="Bold" FontSize="26" Grid.Row="21"/>
                <Line x:Name="AMDTextLine" X1="0" Y1="0" X2="100000" Y2="0" Stroke="DarkGray" StrokeThickness="1.5" Grid.Row="22" VerticalAlignment="Bottom"/>

                <TextBlock x:Name="AMDRadeonSuperResolutionText" Text="Radeon Super Resolution" FontWeight="SemiBold" FontSize="18" Grid.Row="23"
                    TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ToggleSwitch x:Name="AMDRadeonSuperResolutionToggle" IsEnabled="False" OffContent="Disabled" OnContent="{Binding ElementName=AMDRadeonSuperResolutionSharpnessSlider, Path=Value, Converter={StaticResource SharpnessPercentStringConverter}}"
                    FlowDirection="RightToLeft" Grid.Row="23" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <Slider x:Name="AMDRadeonSuperResolutionSharpnessSlider" Grid.Row="24" Margin="0,0,0,0"
                    Minimum="0" Maximum="100"
                    TickFrequency="1"
                    SnapsTo="Ticks"
                    TickPlacement="BottomRight"
                    IsEnabled="False"
                    Visibility="{Binding ElementName=AMDRadeonSuperResolutionToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock x:Name="AMDFluidMotionFrameText" Text="AMD Fluid Motion Frame" FontWeight="SemiBold" FontSize="18" Grid.Row="25"
                    TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ToggleSwitch x:Name="AMDFluidMotionFrameToggle" IsEnabled="False" OffContent="Disabled" OnContent="Enabled"
                    FlowDirection="RightToLeft" Grid.Row="25" VerticalAlignment="Center" HorizontalAlignment="Right" />

                <TextBlock x:Name="AMDRadeonAntiLagText" Text="Radeon Anti-Lag" FontWeight="SemiBold" FontSize="18" Grid.Row="26"
                    TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ToggleSwitch x:Name="AMDRadeonAntiLagToggle" IsEnabled="False" OffContent="Disabled" OnContent="Enabled"
                    FlowDirection="RightToLeft" Grid.Row="26" VerticalAlignment="Center" HorizontalAlignment="Right" />

                <TextBlock x:Name="AMDRadeonBoostText" Text="Radeon Boost" FontWeight="SemiBold" FontSize="18" Grid.Row="27"
                    TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ToggleSwitch x:Name="AMDRadeonBoostToggle" IsEnabled="False" OffContent="Disabled" OnContent="{Binding ElementName=AMDRadeonBoostResolutionSlider, Path=Value, Converter={StaticResource RadeonBoostResolutionStringConverter}}"
                    FlowDirection="RightToLeft" Grid.Row="27" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <Slider x:Name="AMDRadeonBoostResolutionSlider" Grid.Row="28" Margin="0,0,0,0"
                    Minimum="0" Maximum="1"
                    TickFrequency="1"
                    SnapsTo="Ticks"
                    TickPlacement="BottomRight"
                    IsEnabled="False"
                    Visibility="{Binding ElementName=AMDRadeonBoostToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock x:Name="AMDRadeonChillText" Text="Radeon Chill" FontWeight="SemiBold" FontSize="18" Grid.Row="29"
                    TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ToggleSwitch x:Name="AMDRadeonChillToggle" IsEnabled="False" OffContent="Disabled" OnContent="Enabled"
                    FlowDirection="RightToLeft" Grid.Row="29" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <TextBlock x:Name="AMDRadeonChillMinFPSText" Text="{Binding ElementName=AMDRadeonChillMinFPSSlider, Path=Value, Converter={StaticResource RadeonChillMinFPSStringConverter}}" Grid.Row="30"
                    TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Visibility="{Binding ElementName=AMDRadeonChillToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Slider x:Name="AMDRadeonChillMinFPSSlider" Grid.Row="31" Margin="0,0,0,0"
                    Minimum="30" Maximum="300"
                    TickFrequency="5"
                    SnapsTo="Ticks"
                    TickPlacement="BottomRight"
                    IsEnabled="False"
                    Visibility="{Binding ElementName=AMDRadeonChillToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock x:Name="AMDRadeonChillMaxFPSText" Text="{Binding ElementName=AMDRadeonChillMaxFPSSlider, Path=Value, Converter={StaticResource RadeonChillMaxFPSStringConverter}}" Grid.Row="32"
                    TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Visibility="{Binding ElementName=AMDRadeonChillToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Slider x:Name="AMDRadeonChillMaxFPSSlider" Grid.Row="33" Margin="0,0,0,0"
                    Minimum="30" Maximum="300"
                    TickFrequency="5"
                    SnapsTo="Ticks"
                    TickPlacement="BottomRight"
                    IsEnabled="False"
                    Visibility="{Binding ElementName=AMDRadeonChillToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
